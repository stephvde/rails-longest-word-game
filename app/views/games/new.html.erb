<h1>New Game</h1>

<div class="grid">
  <% @letters.each do |letter| %>
  <p id="letter" >
    <%= letter %>
  </p>
     <% end %>
</div>

<form action="/score" method="post">
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" name="word" placeholder="What is the longest word you can find?" id="blank">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="submit" value="Play!" id="btn">
</form>
